<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLatout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/main_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

    </RelativeLayout>
    <!-- 메뉴 클릭시 -->
    <RelativeLayout
        android:id="@+id/menu_relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/menu_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:background="@drawable/search"
            android:cropToPadding="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/search" />

        <ImageButton
            android:id="@+id/menu_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layoutDirection="rtl"
            android:layout_alignParentTop="true"
            android:background="@drawable/menu1"
            android:cropToPadding="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/menu1" />
    </RelativeLayout>
    <!-- 메뉴 출력시 -->
    <RelativeLayout
        android:id="@+id/menu_relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_relative"
        android:visibility="gone">

        <TextView
            android:id="@+id/textAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView7"
            android:layout_toStartOf="@+id/textView7"
            android:background="#7f00aeff"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="전체"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textSchool"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView8"
            android:layout_toStartOf="@+id/textView8"
            android:background="#7f00aeff"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="학교건물"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textFood"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView9"
            android:layout_toStartOf="@+id/textView9"
            android:background="#7f00aeff"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="음식"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textBook"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView10"
            android:layout_toStartOf="@+id/textView10"
            android:background="#7f00aeff"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="문구,서적"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textETC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView11"
            android:layout_toStartOf="@+id/textView11"
            android:background="#7f00aeff"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="기타"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textOption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="45dp"
            android:background="#7f00aeff"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="설정"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textSchool"
            android:layout_toStartOf="@+id/textSchool"
            android:background="#7f00aeff"
            android:gravity="center"
            android:text="|"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textFood"
            android:layout_toStartOf="@+id/textFood"
            android:background="#7f00aeff"
            android:gravity="center"
            android:text="|"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textBook"
            android:layout_toStartOf="@+id/textBook"
            android:background="#7f00aeff"
            android:gravity="center"
            android:text="|"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textETC"
            android:layout_toStartOf="@+id/textETC"
            android:background="#7f00aeff"
            android:gravity="center"
            android:text="|"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textOption"
            android:layout_toStartOf="@+id/textOption"
            android:background="#7f00aeff"
            android:gravity="center"
            android:text="|"
            android:textColor="#ffffff" />

    </RelativeLayout>
    <!-- edit 설정시 -->
    <RelativeLayout
        android:id="@+id/edit_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/edit_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/search"
            android:cropToPadding="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/edit_img1"
            android:layout_toRightOf="@+id/edit_img2" />

        <ImageButton
            android:id="@+id/edit_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/menu1"
            android:cropToPadding="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/menu1" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:background="@drawable/search"
        android:cropToPadding="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/search"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:background="@drawable/menu"
        android:cropToPadding="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>